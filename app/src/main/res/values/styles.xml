<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#0A2533</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SpinnerTextStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_border</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>