<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ui.breadfeed.BreadfeedFragment">

    <!-- Add this TextView at the top of the layout -->
    <TextView
        android:id="@+id/breadfeedTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bagelfatone_regular"
        android:text="ë‚˜ëž‘ ê°™ì´ ë¹µðŸž ë¨¹ìœ¼ëŸ¬ ê°ˆëž˜? ðŸ‘‰ðŸ‘ˆ"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
