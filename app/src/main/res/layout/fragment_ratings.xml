<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="ðŸ” ì°¾ê³  ì‹¶ì€ ë¹µì„ ê²€ìƒ‰í•˜ì„¸ìš”"
            android:padding="18dp"
            android:layout_marginTop="15dp"
            android:background="@xml/rounded_search_bar"
            android:textSize="16sp"
            android:inputType="text"
            androidx:layout_constraintTop_toTopOf="parent"
            androidx:layout_constraintLeft_toLeftOf="parent"
            androidx:layout_constraintRight_toRightOf="parent"
            androidx:layout_constraintWidth_percent="0.9" />

        <Spinner
            android:id="@+id/sort_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:entries="@array/sort_options"
            androidx:layout_constraintTop_toBottomOf="@id/search_edit_text"
            androidx:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_ratings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            androidx:layout_constraintTop_toBottomOf="@id/sort_spinner"
            androidx:layout_constraintBottom_toBottomOf="parent"
            androidx:layout_constraintLeft_toLeftOf="parent"
            androidx:layout_constraintRight_toRightOf="parent"
            androidx:layout_constraintWidth_percent="0.93" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>